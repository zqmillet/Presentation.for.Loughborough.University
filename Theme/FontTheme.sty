\ProvidesPackage{FontTheme}

\usepackage[no-math]{fontspec}
\usepackage{etoolbox}


%%% modified by KK for ShareLaTeX use
\defaultfontfeatures{Mapping=tex-text}

\setsansfont[Path=fonts/,
             BoldFont = Optima_Bold.ttf,
             ItalicFont = Optima_Italic.ttf,
             BoldItalicFont = Optima_Bold_Italic.ttf]{Optima.ttf}
\setmonofont{Consolas}

\newfontfamily\Black[Path=fonts/]{Optima_Black.ttf}
\newfontfamily\Bold[Path=fonts/]{Optima_Bold.ttf}
\newfontfamily\Italic[Path=fonts/]{Optima_Italic.ttf}
\newfontfamily\BoldItalic[Path=fonts/]{Optima_Bold_Italic.ttf}
\newfontfamily\Normal[Path=fonts/]{Optima.ttf}

\AtBeginEnvironment{tabular}{\setsansfont[Path=fonts/,BoldFont={FiraSans-Regular.ttf}, Numbers={Monospaced}]{FiraSans-Light.ttf}}
%%%

\setbeamerfont{title}{family=\Black, size=\Large}
\setbeamerfont{author}{family=\Bold, size=\small}
\setbeamerfont{date}{family=\Bold, size=\small}

\setbeamerfont{section title}{family=\Black, size=\LARGE}
\setbeamerfont{subsection title}{family=\Black, size=\LARGE}

\setbeamerfont{block title}{family=\Black,size=\normalsize}
\setbeamerfont{block title alerted}{family=\Black,size=\normalsize}

\setbeamerfont{subtitle}{family=\Black, size=\fontsize{12}{14}}
\setbeamerfont{frametitle}{family=\Black, series=\scshape, size=\large}

\setbeamerfont{alerted text}{family=\Italic}

\setbeamerfont{caption}{size=\small}
\setbeamerfont{caption name}{family=\Bold}

\setbeamerfont{description item}{family=\Bold}


\linespread{1.15}
